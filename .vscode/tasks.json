{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Home Assistant on port 8123",
            "type": "shell",
            "command": "scripts/develop",
            "problemMatcher": []
        },
        {
            "label": "Run Home Assistant on port 8123 (with emulation)",
            "type": "shell",
            "command": "scripts/develop",
            "options": {"env": {"thinq2_emulation": "ENABLED"}},
            "problemMatcher": []
        },
		{
		  "label": "Install Requirements",
		  "type": "shell",
		  "command": "pip3 install --use-deprecated=legacy-resolver -r requirements.txt",
		  "group": {
			"kind": "build",
			"isDefault": true
		  },
		  "presentation": {
			"reveal": "always",
			"panel": "new"
		  },
		  "problemMatcher": []
		},
		{
		  "label": "Install Test Requirements",
		  "type": "shell",
		  "command": "pip3 install --use-deprecated=legacy-resolver -r requirements_test.txt",
		  "group": {
			"kind": "build",
			"isDefault": true
		  },
		  "presentation": {
			"reveal": "always",
			"panel": "new"
		  },
		  "problemMatcher": []
		},
		{
		  "label": "Run PyTest",
		  "detail": "Run pytest for integration.",
		  "type": "shell",
		  "command": "pytest --cov-report term-missing -vv --durations=10",
		  "group": {
			"kind": "test",
			"isDefault": true
		  },
		  "presentation": {
			"reveal": "always",
			"panel": "new"
		  },
		  "problemMatcher": []
		}
    ]
}
